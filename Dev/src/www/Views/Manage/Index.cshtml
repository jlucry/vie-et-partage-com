                    <dl class="dl-horizontal">
                        <dt>Mot de passe:</dt>
                        <dd>
                            @if (1 == 1/*Model.HasPassword*/)
                            {
                                <a asp-controller="Manage" asp-action="ChangePassword" class="btn-bracketed">Modifier</a>
                            }
                            @*else
                            {
                                <a asp-controller="Manage" asp-action="SetPassword" class="btn-bracketed">Create</a>
                            }*@
                        </dd>
                        <dt>Logins externes:</dt>
                        <dd>
                            @Model.Logins.Count @*<a asp-controller="Manage" asp-action="ManageLogins" class="btn-bracketed">Gérer</a>*@
                        </dd>
                        <dt>Numéro de téléphone:</dt>
